{% extends "layout.twig" %}
{% block style %}
    <style>
		.orderDetails {
			margin: 30px;
			width: 80%;
			display: flex;
			flex-direction: column;
		}
		.orderDetails_content{
			display: flex;
		}
		.orderDetails_row {
			display: flex;
			flex-direction: column;
			width: 60%;
			justify-content: center;
		}
		.product_details {
			width: 85%;
			display: flex;
			flex-direction: row;
			justify-content: space-between;
		}
		.totalDetails {
			display: flex;
			flex-direction: column;
		}
		.greyLine {
		  width: 100%;
		  height: 1px;
		  background-color: #ededed;
		  margin: 0.5em 0;
		}
		.confirmBlock {
			display: flex;
			flex-direction: column;
		}
		#orderPay {
			margin: 20px 0;
		}
	</style>
{% endblock %}
{% block title %}Login{% endblock %}
{% block content %}
Это страничка управления заказами.
<div class="greyLine"></div>
{% for order in order_details %}
<div class="orderDetails_content">
    {# {{ item['product_id'] }} #}
    <div class="orderDetails_row">
    {% for item in order %}
        {% if not item['product_id'] == 0 %}
            <div class="product_details">
                <p> Наименование товара: {{ item['product_name'] }}, Артикул: {{ item['product_code'] }}, </p>
                <p> Стоимость:  {{ item['product_price'] }} x {{ item['product_count'] }} = {{ item['subtotal_sum'] }}</p>
            </div>
        {% else %}
            </div>
            <div class="totalDetails">
                <p>Номер заказа {{ item['id'] }}: Итоговая сумма: {{ item['total_sum'] }}</p>
                <p>Получатель: {{ item['user_name'] }}</p>
                <p>Адрес доставки: {{ item['user_address'] }}</p>
                <p>Статус заказа: 
                    {% if item['order_state'] == 1 %}
                        Создан
                    {% elseif item['order_state'] == 2 %}
                        Ожидает оплаты
                    {% elseif item['order_state'] == 3 %}
                        Оплачен, ожидает отправки
                    {% elseif item['order_state'] == 4 %}
                        Отправлен
                    {% elseif item['order_state'] == 5 %}
                        Выдан получателю
                    {% elseif item['order_state'] == 7 %}
                        Отменен
                    {% endif %}
                </p>
                <p>Дата создания заказа: {{ item['create_date'] }}</p>
                <p>Дата оплаты заказа: {{ item['pay_date'] }}</p>
                {% if item['order_state'] == 1 %}
                    <a href="change?id={{ item['id'] }}&action=cancel"><button class="cancel">Отменить заказ</button></a>
                    <a href="change?id={{ item['id'] }}&action=accept"><button class="accept">Подтвердить заказ</button></a>
                {% elseif item['order_state'] == 2 %}
                    <a href="change?id={{ item['id'] }}&action=cancel"><button class="cancel">Отменить заказ</button><button class="accept">Подтвердить заказ</button></a>
                {% elseif item['order_state'] == 3 %}
                    <a href="change?id={{ item['id'] }}&action=send"><button class="send">Подтвердить отправку</button></a>
                {% endif %}
            </div>
        {% endif %}
        {% endfor %}
    </div>
 <div class="greyLine"></div>
{% endfor %}
{% endblock %}